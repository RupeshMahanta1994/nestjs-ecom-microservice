  "phone": "+1987654321",
  "address": {
    "street": "456 Oak Ave",
    "city": "Los Angeles",
    "zipCode": "90001",
    "country": "USA"
  },
  "preferences": {
    "newsletter": false,
    "notifications": "sms"
  }
}

